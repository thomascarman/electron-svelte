{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "prettier.quoteProps": "as-needed",
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.endOfLine": "auto",
  "prettier.arrowParens": "always",
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true
}
